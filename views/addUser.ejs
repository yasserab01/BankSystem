<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>

    <div class="container mt-2">
        <a href="/" class="btn btn-primary fw-bold">&larr; Back</a>
    </div>

    <div class="container mt-5">
        <% if (msg ="User Added Successfully") { %>
            <div class="alert alert-success text-center" role="alert">
                <%= msg %>
            </div>
        <% } else  { %>
            <div class="alert alert-danger text-center" role="alert">
                <%= err %>
            </div>
        <% } %>

        <div class="container mt-5 text-center text-light fw-30 p-2" style="background-color: #241571;">
            <h3>Add User Form</h3>
        </div>

        <form action="/adduser" method="POST">
            <div class="form-group mt-3">
                <label for="userName">Name</label>
                <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter User Name" required>
            </div>
            <div class="form-group mt-3">
                <label for="userEmail">Email address</label>
                <input type="email" class="form-control" id="userEmail" name="userEmail" placeholder="Enter User Email">
            </div>
            <div class="form-group mt-3">
                <label for="userNumber">Mobile</label>
                <input type="number" class="form-control" id="userNumber" name="userNumber" placeholder="Enter User Contact">
            </div>
            <div class="form-group mt-3">
                <label for="userAmount">Amount</label>
                <input type="number" class="form-control" id="userAmount" name="userAmount" placeholder="Enter Amount">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>

    <%- include('./components/bootstrapScript') -%>
    <script>
        let alert = document.querySelector('.alert');
        setTimeout(() => {
            alert.style.display = "none";
        }, 3000);
    </script>
</body>
</html>
